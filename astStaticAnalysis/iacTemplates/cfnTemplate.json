{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Sample cloudformation template",
    "Resources": {
        "MyIAMPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "AutogenPolicy",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "Statement1",
                            "Effect": "Allow",
                            "Action": [
                                "lambda:ListFunctions"
                            ],
                            "Resource": "*"
                        },
                        {
                            "Sid": "Statement2",
                            "Effect": "Allow",
                            "Action": [
                                "s3:CreateBucket",
                                "s3:DeleteBucket"
                            ],
                            "Resource": "*"
                        }
                    ]
                }
            }
        }
    }
}